
extends layout/page

block content
   form.form-horizontal.login-form.col-xs-12.col-sm-offset-3.col-sm-6.col-lg-4.col-lg-offset-4(name="login-form")
      h4.form-group Введите имя пользователя и пароль. Если такого пользователя нет - он будет создан.
      .form-group
         label.control-label(for="input-username") Имя
         input.form-control#input-username(name="username" type="text" placeholder="Введите логин" required)

      .form-group
         label.control-label(for="input-password") Пароль
         input.form-control#input-password(name="password" type="password" placeholder="Введите пароль" required)

      .form-group
         button.btn.btn-primary(type="submit" data-loading-text="Отправляю...") Войти
         span.help-block.error

block append scripts
   script(src="/js/login.js")